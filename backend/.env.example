# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/healthscan

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AI Services - Meditron Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=meditron:7b

# Hugging Face Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_api_token_here
HUGGINGFACE_MODEL=epfl-llm/meditron-70b
AI_PROVIDER=huggingface

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Logging
LOG_LEVEL=info

# Firebase Admin (for authentication)
FIREBASE_ADMIN_CREDENTIALS=firebase-admin-key.json