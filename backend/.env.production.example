# Production Environment Configuration

# Application
NODE_ENV=production
PORT=8080
APP_NAME=HealthScan AI
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/healthscan_prod"
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=10000

# Security
JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-256-bits-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-64-characters-long

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/jpg,image/png,image/gif,image/bmp,image/tiff

# AI Services
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
AI_PROVIDER=ollama
AI_TIMEOUT=30000

# Google AI (optional)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-pro

# OpenRouter (optional)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20971520
LOG_MAX_FILES=5

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Health Checks
HEALTH_CHECK_INTERVAL=30000
DATABASE_HEALTH_CHECK=true
AI_HEALTH_CHECK=true

# Session Management
SESSION_CLEANUP_INTERVAL=3600000
MAX_CONCURRENT_SESSIONS=5

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# SSL/TLS
FORCE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Feature Flags
ENABLE_CHAT=true
ENABLE_FAMILY_MANAGEMENT=true
ENABLE_TIMELINE=true
ENABLE_ADVANCED_AI=true

# Performance
WORKER_THREADS=4
MEMORY_LIMIT=512mb
CPU_LIMIT=1000m

# Compliance
GDPR_ENABLED=true
HIPAA_ENABLED=true
DATA_RETENTION_DAYS=2555